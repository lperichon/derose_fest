<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "com.padma.derose_fest" 
        version   = "1.0.0">

    <!-- versionCode is optional and Android only -->

    <name>X DeRose Festival BA</name>

    <description>
        Aplicaci√≥n para el DeRose Festival Buenos Aires 2013
    </description>

    <author href="https://build.phonegap.com" email="support@phonegap.com">
        Luis Perichon
    </author>

    <preference name="phonegap-version" value="2.9.0" />

    <preference name="show-splash-screen-spinner" value="false" />

    <preference name="splash-screen-duration" value="6000" />

    <icon src="resources/icons/icon@36.png" gap:platform="android" gap:density="ldpi" />
