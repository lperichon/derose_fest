    <icon src="resources/icons/icon@72.png" gap:platform="android" gap:density="hdpi" />
    <icon src="resources/icons/icon@96.png" gap:platform="android" gap:density="xhdpi" />

    <gap:splash src="resources/startup/200x320.png" gap:platform="android" gap:density="ldpi" />
    <gap:splash src="resources/startup/320x480.png" gap:platform="android" gap:density="mdpi" />
    <gap:splash src="resources/startup/480x800.png" gap:platform="android" gap:density="hdpi" />
    <gap:splash src="resources/startup/720x1280.png" gap:platform="android" gap:density="xhdpi" />
</widget>